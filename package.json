{
  "name": "npm-script",
  "version": "0.2.1",
  "description": "",
  "main": "index.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint test.json",
    "lint:md": "markdownlint --config .markdownlint.json *.md",
    "mocha": "mocha tests/",
    "check-serial": "npm run lint:js && npm run lint:css && npm run lint:json && npm run lint:md && npm run mocha",
    "check-parallel": "npm run lint:js & npm run lint:css & npm run lint:json & npm run lint:md & npm run mocha",
    "check-all": "npm-run-all lint:js lint:css lint:json lint:md mocha",
    "check-all-simple": "npm-run-all lint:* mocha",
    "check-all-parallel": "mocha",
    "//": "以coverage_archive\\%npm_package_version%为根目录, %npm_package_config_port%为端口，创建服务器",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test mocha tests/",
    "cover": "node scripts/cover.js",
    "cover:serve": "cross-var http-server coverage_archive/$npm_package_version -p $npm_package_config_port",
    "cover:open": "cross-var open-cli http://localhost:$npm_package_config_port",
    "watch:test": "npm t -- --watch",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "watch": "npm-run-all --parallel watch:*",
    "client": "live-server client/",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.{less, css}": "stylelint",
    "*.json": "jsonlint --quiet",
    "*.md": "markdownlint --config .markdownlint.json"
  },
  "keywords": [],
  "author": "xusp <xspstudyemail@163.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.10",
    "chalk": "4.1.2",
    "cpr": "^3.0.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "eslint": "^8.52.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^15.0.2",
    "live-server": "^1.2.2",
    "make-dir-cli": "^3.1.0",
    "markdownlint-cli": "^0.37.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "onchange": "^7.1.0",
    "open-cli": "^7.2.0",
    "rimraf": "^5.0.5",
    "scripty": "^2.1.1",
    "shelljs": "^0.8.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  }
}
